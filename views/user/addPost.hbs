<div class="container" style="margin: auto;">
    <div class="outer" style=" width: 500px; margin: auto; margin-top: 100px; background-color: rgb(242, 242, 242);">
        <form class="form-horizontal" action="/post/add?id={{user.id}}" method="post" enctype="multipart/form-data"
            style="width: 400px; margin: auto; padding: 20px;">
            <h3 style="color: #0f7ebd;">Add Post</h3>

            {{#if msg}}
            <p>{{msg}}</p>
            {{/if}}

            <div class="form-group mb-3 mt-3">
                <div class="row">
                    <label for="title" class="col-sm-3 control-label mt-3">Title</label>
                    <div class="col-sm-9">
                        <input type="text" name="title" id="title" required class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group mb-4">
                <div class="row">
                    <label class="col-sm-3 control-label">Image</label>
                    <div class="col-sm-9">
                        <input type="file" name="image" id="image" required class="form-control">
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add Post</button>
            <button onclick="reset()" class="btn btn-secondary">Reset</button>
            <a href="/user/dashboard?id={{user.id}}" class="btn btn-info">Back</a>
            </p>
        </form>
    </div>
</div>


