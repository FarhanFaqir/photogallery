{{> header }}
{{> navbar }}

<div class="container" style="margin: auto;">
    <div class="outer" style=" width: 500px; margin: auto; margin-top: 100px; background-color: rgb(242, 242, 242);">
        <form action="/user/login" method="post" style="width: 400px; margin: auto; padding: 20px;">
            <h3 style="color: #0f7ebd;">Login Form</h3>
            {{#if msg}}
            <div style="width: 100%;" class=" alert alert-danger alert-dismissible fade show" role="alert">
                {{msg}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
            <div class="mb-3" style="margin-top: 20px">
                <label for="email" class="form-label">Email address</label>
                <input type="email" required class="form-control" name="email" id="email" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" required class="form-control" name="password" id="password" />
            </div>

            <button type="submit" class="btn btn-primary">Sign In</button>
            <button onclick="reset()" class="btn btn-secondary">Reset</button>
            <p style=" margin-top: 15px;">Don't have an account? <a href="/user/register">Sign Up</a>
            </p>
        </form>
    </div>
</div>


{{> footer }}